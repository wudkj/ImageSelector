<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.sumile.sumileimagechooser">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="net.sumile.imageviewpager.activity.ImagePagerActivity"></activity>
        <activity android:name=".activity.ImageChooserActivity"/>
        <activity
            android:name=".SumileImageChooserUtil"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>
    </application>

</manifest>