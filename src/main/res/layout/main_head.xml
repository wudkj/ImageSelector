<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bar_color">


    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/common_tab_bg"
        android:clickable="false"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_menu_back"/>

        <TextView
            android:id="@+id/tmp_line"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/img_back"
            android:background="#282828"/>

        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/tmp_line"
            android:gravity="center"
            android:text=""
            android:textColor="#fff"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/right_layout_text"
        android:layout_width="@dimen/layout_size_91"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/layout_size_10"
        android:visibility="visible">

        <TextView
            android:id="@+id/main_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/text_view_border_dark"
            android:gravity="right"
            android:padding="7dip"
            android:text="相册(2/2)"
            android:textColor="@color/title_choose_text_light"
            android:textSize="@dimen/text_size_12"/>
    </RelativeLayout>

</RelativeLayout>